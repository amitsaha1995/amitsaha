  <!-- EmailJS Integration -->
  <script src="https://cdn.jsdelivr.net/npm/emailjs-com@3/dist/email.min.js"></script>
  <script>
    (function() {
      emailjs.init("8sRbCbn07SsB0_S6Y"); // Replace with your EmailJS Public Key
    })();

    let cart = [];

    function addToCart(service, price) {
      cart.push({ service, price });
      renderCart();
    }

    function renderCart() {
      const table = document.getElementById("cartTable");
      table.innerHTML = "<tr><th>S.No</th><th>Service</th><th>Price</th></tr>";
      let total = 0;
      cart.forEach((item, i) => {
        table.innerHTML += `<tr><td>${i + 1}</td><td>${item.service}</td><td>‚Çπ${item.price}</td></tr>`;
        total += item.price;
      });
      document.getElementById("totalAmount").innerText = "Total: ‚Çπ" + total;
    }

    // üìß Send Email on Book Now
    document.querySelector(".book-form button").addEventListener("click", function() {
      const name = document.querySelector(".book-form input[placeholder='Full Name']").value.trim();
      const email = document.querySelector(".book-form input[placeholder='Email ID']").value.trim();
      const phone = document.querySelector(".book-form input[placeholder='Phone Number']").value.trim();

      if (!name || !email || !phone || cart.length === 0) {
        alert("Please fill all details and add at least one service to cart!");
        return;
      }

      const cartDetails = cart.map((item, i) => `${i + 1}. ${item.service} - ‚Çπ${item.price}`).join("\n");
      const total = cart.reduce((sum, i) => sum + i.price, 0);

      const templateParams = {
        customer_name: name,
        customer_email: email,
        customer_phone: phone,
        cart_items: cartDetails,
        total_price: "‚Çπ" + total
      };

      emailjs.send("service_j4cnfvo", "template_wd2u74w", templateParams)
        .then(function(response) {
          alert("‚úÖ Booking details sent successfully!");
          cart = [];
          renderCart();
        }, function(error) {
          alert("‚ùå Failed to send email: " + error.text);
        });
    });
  </script>

